<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	
	<portlet>
		<portlet-name>contacts-form</portlet-name>
		<display-name>Contact Info Form</display-name>
		<portlet-class>
			biz.fz5.app.kumquat.portlet.ContactsFormPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/view.jsp</value>
		</init-param>
		 <init-param>
		     <name>config-template</name>
		     <value>/configuration.jsp</value>
		 </init-param>
		<init-param>
			<name>add-process-action-success-action</name>
    		<value>false</value>
  		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Contact Info Form</title>
			<short-title>Contact Info Form</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>contacts-report</portlet-name>
		<display-name>Contact Info Report</display-name>
		<portlet-class>
			biz.fz5.app.kumquat.portlet.ContactsReportPortlet
		</portlet-class>
		<init-param>
			<name>view-jsp</name>
			<value>/admin/view.jsp</value>
		</init-param>
		<init-param>
		     <name>config-template</name>
		     <value>/admin/configuration.jsp</value>
		 </init-param>
		<init-param>
			<name>add-process-action-success-action</name>
    		<value>false</value>
  		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Contact Info Report</title>
			<short-title>Contact Info Report</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
	<portlet>
		<portlet-name>group-configuration</portlet-name>
		<display-name>Group Configuration</display-name>
		<portlet-class>
			biz.fz5.app.kumquat.portlet.GroupConfigurationPortlet
		</portlet-class>
		<init-param>
			<name>view-template</name>
			<value>/admin/viewContactGroup.jsp</value>
		</init-param>		
		<init-param>
			<name>add-process-action-success-action</name>
    		<value>false</value>
  		</init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>
		<resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>Group Configuration</title>
			<short-title>Group Configuration</short-title>
			<keywords></keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
</portlet-app>